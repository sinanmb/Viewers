
$headerRowHeight = 63px

.metadata
  background-color: var(--primary-background-color)
  // height: 100%;
  width: 100%;

.metadataHeader
  background-color: var(--ui-gray-darker)
  color: var(--text-secondary-color)
  display: flex
  height: $headerRowHeight
  line-height: $headerRowHeight
  margin-top: 2px
  overflow: hidden
  width: 100%

.metadataHeaderTitle
  color: var(--text-secondary-color)
  font-size: 22px
  font-weight: 300
  // line-height: $headerRowHeight
  padding: 0 10px
  text-align: left
  flex: 1;

.metadataScrollArea
  height: 100%

  .metadataScroll
    height: inherit
    overflow-y: auto
    display: flex
    flex-direction: column

  h4
    color: white
    color: var(--text-primary-color)

.sectionTitle
  padding: 1em 0.25em
  margin-top: 0
  margin-bottom: 1px
  background-color: grey
  cursor: pointer
  border: 1px solid black

.metadata-info-content
  color: white
  padding: 0em 0.5em

